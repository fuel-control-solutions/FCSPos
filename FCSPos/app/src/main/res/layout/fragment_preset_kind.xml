<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.PresetKindFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/llMoneyPreset"
        android:layout_width="match_parent"
        android:layout_height="137dp"
        android:layout_marginBottom="20dp"
        android:background="#6BBD18"
        android:elevation="5dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_weight="0.3"
            android:gravity="center_vertical"
            android:text="@string/dinero"
            android:textColor="@color/cardview_light_background"
            android:textSize="36sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:src="@drawable/dolar"
                android:contentDescription="TODO" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_triangulo" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llVolumePreset"
        android:layout_width="match_parent"
        android:layout_height="137dp"
        android:layout_marginBottom="20dp"
        android:background="#6BBD18"
        android:elevation="5dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.3"
            android:gravity="center_vertical"
            android:text="@string/volumen"
            android:textColor="@color/cardview_light_background"
            android:textSize="36sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:src="@drawable/dolar" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_triangulo"
                android:contentDescription="TODO" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llFullPreset"
        android:layout_width="match_parent"
        android:layout_height="137dp"
        android:layout_marginBottom="20dp"
        android:background="#6BBD18"
        android:elevation="5dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_weight="0.3"
            android:gravity="center_vertical"
            android:text="@string/full"
            android:textColor="@color/cardview_light_background"
            android:textSize="36sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:src="@drawable/dolar"
                android:contentDescription="TODO" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_triangulo" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>