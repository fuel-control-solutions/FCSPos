<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/pbConetionWifi"
            android:visibility="gone"
            android:indeterminate="true"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"/>

        <TextView
            android:gravity="center"
            android:text="ELIJA UNA POSICION DE LA EDS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:text="Equipo A Posicion 1"
            android:id="@+id/btnPos1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:text="Equipo A Posicion 2"
            android:id="@+id/btnPos2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:text="Equipo B Posicion 1"
            android:id="@+id/btnPos3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:text="Equipo B Posicion 2"
            android:id="@+id/btnPos4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>